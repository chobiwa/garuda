<h4>Add Receipts</h4>

<div class="receipt-forms" id="ReceiptForms">
  

    <form class="receipt-form">
        <div class="row">
            <div class="col-xs-2">
              <div class="input-group">
                <input type="text" class="form-control store-name" placeholder="Store Name">
              </div>
            </div>
            <div class="col-xs-2">
              <div class="input-group">
                <input type="text" class="form-control amount" placeholder="Amount">
              </div>
            </div>
            <div class="col-xs-2">
              <div class="input-group">
                <input type="text" class="form-control bill-no" placeholder="Bill No">
              </div>
            </div>
            <div class="col-xs-2">
              <div class="input-group">
                <select class="form-control is-today">
                  <option>Is Today</option>
                  <option>Yes</option>
                  <option>No</option>
                </select>
              </div>
            </div>
        </div>
    </form>

